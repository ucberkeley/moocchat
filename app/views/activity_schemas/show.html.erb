<%- model_class = ActivitySchema -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:cohort_id) %>:</strong></dt>
  <dd><%= @activity_schema.cohort_id %></dd>
  <dt><strong><%= model_class.human_attribute_name(:enabled) %>:</strong></dt>
  <dd><%= @activity_schema.enabled %></dd>
  <dt><strong><%= model_class.human_attribute_name(:randomized) %>:</strong></dt>
  <dd><%= @activity_schema.randomized %></dd>
  <dt><strong><%= model_class.human_attribute_name(:num_questions) %>:</strong></dt>
  <dd><%= @activity_schema.num_questions %></dd>
  <dt><strong><%= model_class.human_attribute_name(:tag) %>:</strong></dt>
  <dd><%= @activity_schema.tag %></dd>
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @activity_schema.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:start_time) %>:</strong></dt>
  <dd><%= @activity_schema.start_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:end_time) %>:</strong></dt>
  <dd><%= @activity_schema.end_time %></dd>
  <dt><strong><%= model_class.human_attribute_name(:starts_every) %>:</strong></dt>
  <dd><%= @activity_schema.starts_every %></dd>

</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              activity_schemas_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_activity_schema_path(@activity_schema), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              activity_schema_path(@activity_schema),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
