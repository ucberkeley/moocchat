<%- model_class = Condition -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.titleize %></h1>
</div>

<dl class="dl-horizontal">
  <dt><strong><%= model_class.human_attribute_name(:name) %>:</strong></dt>
  <dd><%= @condition.name %></dd>
  <dt><strong><%= model_class.human_attribute_name(:prologue_pages) %>:</strong></dt>
  <dd><%= @condition.prologue_pages %></dd>
  <dt><strong><%= model_class.human_attribute_name(:body_pages) %>:</strong></dt>
  <dd><%= @condition.body_pages %></dd>
  <dt><strong><%= model_class.human_attribute_name(:epilogue_pages) %>:</strong></dt>
  <dd><%= @condition.epilogue_pages %></dd>
</dl>

<div class="form-actions">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              conditions_path, :class => 'btn'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_condition_path(@condition), :class => 'btn' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              condition_path(@condition),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>
