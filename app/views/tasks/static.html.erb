 <div class= "container">
  <center><h1 class="title">MoocChat Configuration Page</h1></center>
  <i><h6>Please fill out the following</h6></i>
  <%= form_tag tasks_path do  %>
  <div class="field">
    <label for="learner_name"><b>Learner name</b></label><br/>
    <%= text_field_tag :learner_name,nil, :placeholder=> "Put Your Name Here" %>
  </div>
  <div class="field">
    <label for="condition_id"><b>Condition</b></label><br/>
    <%= collection_select( :condition, :id, Condition.all, :id, :name,
        {prompt: 'Please Select from the following choices'}, 
        {class: "form-control", name: "condition_id"}  ) %>
  </div>
  <div class="field">
    <label for="activity_schema_id"><b>Activity</b></label><br/>
    <%= collection_select( :activity_schema, :id, ActivitySchema.all, :id, :name,
        {prompt: 'Please Select from the following choices'}, 
        {class: "form-control", name: "activity_schema_id" }) %>
  </div>
  <div class="actions">
    <%= submit_tag "SUBMIT" , :class => "btn btn-primary"%>
  </div>
  <% end %>
</div>
